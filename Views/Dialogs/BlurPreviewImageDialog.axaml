<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="FaceShield.Views.Dialogs.BlurPreviewImageDialog"
        Title="블러 예시"
        SizeToContent="WidthAndHeight"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
  <Border Padding="12" Background="#151515">
    <StackPanel Spacing="8">
      <TextBlock x:Name="LabelText" Opacity="0.85" FontSize="12"/>
      <Border BorderBrush="#2A2A2A" BorderThickness="1">
        <Image x:Name="PreviewImage" Stretch="None"/>
      </Border>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <Button Content="닫기" Click="OnCloseClick"/>
      </StackPanel>
    </StackPanel>
  </Border>
</Window>
