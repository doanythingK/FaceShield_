<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:FaceShield.ViewModels.Pages"
        x:Class="FaceShield.Views.Dialogs.BlurPreviewDialog"
        x:DataType="vm:HomePageViewModel"
        Title="블러 예시"
        SizeToContent="Height"
        Width="520"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
  <Border Padding="16" Background="#151515">
    <StackPanel Spacing="12">
      <TextBlock Text="블러 강도와 해상도별 예시" FontSize="14" FontWeight="SemiBold"/>
      <TextBlock Text="예시 이미지를 클릭하면 원본 크기로 볼 수 있습니다."
                 Opacity="0.8"
                 FontSize="12"/>

      <StackPanel Orientation="Horizontal" Spacing="8">
        <TextBlock Text="블러 강도" Width="80" VerticalAlignment="Center"/>
        <Slider Width="240"
                Minimum="{Binding MinBlurRadius}"
                Maximum="{Binding MaxBlurRadius}"
                Value="{Binding BlurRadius, Mode=TwoWay}"
                TickFrequency="2"
                IsSnapToTickEnabled="True"/>
        <TextBlock Text="{Binding BlurRadius}" Width="40" VerticalAlignment="Center"/>
      </StackPanel>

      <StackPanel Orientation="Horizontal" Spacing="8">
        <TextBlock Text="해상도" Width="80" VerticalAlignment="Center"/>
        <ComboBox Width="220"
                  ItemsSource="{Binding ResolutionOptions}"
                  SelectedItem="{Binding SelectedResolutionOption}">
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding Label}"/>
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>
      </StackPanel>

      <ItemsControl ItemsSource="{Binding BlurExamples}">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <WrapPanel Orientation="Horizontal" ItemWidth="120" ItemHeight="110"/>
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
          <DataTemplate x:DataType="vm:BlurExampleItem">
            <StackPanel Spacing="2">
              <Border BorderBrush="#2A2A2A" BorderThickness="1">
                <Button Padding="0"
                        BorderThickness="0"
                        Background="Transparent"
                        Click="OnExampleClick">
                  <Image Width="110" Height="82" Stretch="UniformToFill" Source="{Binding Image}"/>
                </Button>
              </Border>
              <TextBlock Text="{Binding Label}" HorizontalAlignment="Center" FontSize="11" Opacity="0.85"/>
            </StackPanel>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>

      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <Button Content="닫기" Click="OnCloseClick"/>
      </StackPanel>
    </StackPanel>
  </Border>
</Window>
